import { useRef, useState, useEffect } from "react";

export default function ChatInput({ onSend }: { onSend: (t: string) => void }) {
  const ref = useRef<HTMLTextAreaElement>(null);
  const [text, setText] = useState("");

  // 自動リサイズ
  useEffect(() => {
    if (!ref.current) return;
    ref.current.style.height = "auto";
    ref.current.style.height = `${ref.current.scrollHeight}px`;
  }, [text]);

  const submit = () => {
    if (!text.trim()) return;
    onSend(text);
    setText("");
  };

  return (
    <div className="sticky bottom-0 bg-white dark:bg-[#131313] pt-2">
      <div className="flex items-end gap-2 p-2 border rounded-xl
                      border-gray-300 dark:border-gray-700">
        <textarea
          ref={ref}
          rows={1}
          value={text}
          onChange={(e) => setText(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && !e.shiftKey && (e.preventDefault(), submit())}
          placeholder="何でも聞いてください…"
          className="flex-1 resize-none bg-transparent outline-none
                     text-gray-900 dark:text-gray-100 leading-6"
        />
        <button
          onClick={submit}
          className="px-3 py-1.5 rounded-lg bg-emerald-500 text-white
                     hover:bg-emerald-600 disabled:opacity-40"
          disabled={!text.trim()}
        >
          送信
        </button>
      </div>
    </div>
  );
}
